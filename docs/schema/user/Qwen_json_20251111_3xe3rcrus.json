{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "UserInfoResponse",
  "description": "用户信息响应",
  "properties": {
    "id": {
      "type": "integer",
      "description": "用户ID",
      "example": 123
    },
    "username": {
      "type": "string",
      "description": "用户名",
      "example": "john_doe"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "邮箱",
      "example": "john@example.com"
    },
    "nickname": {
      "type": "string",
      "description": "昵称",
      "example": "John",
      "nullable": true
    },
    "avatar_url": {
      "type": "string",
      "format": "uri",
      "description": "头像URL",
      "example": "https://example.com/avatar.jpg",
      "nullable": true
    },
    "bio": {
      "type": "string",
      "description": "个人简介",
      "example": "Hello World",
      "nullable": true
    },
    "role": {
      "type": "string",
      "enum": ["user", "admin"],
      "description": "用户角色",
      "example": "user"
    },
    "is_active": {
      "type": "boolean",
      "description": "是否激活",
      "example": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "创建时间",
      "example": "2023-01-01T12:00:00Z"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "更新时间",
      "example": "2023-01-01T12:00:00Z"
    }
  },
  "required": ["id", "username", "email", "role", "is_active", "created_at"]
}