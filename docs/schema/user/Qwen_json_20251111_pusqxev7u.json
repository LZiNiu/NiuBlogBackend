{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "ChangePasswordRequest",
  "description": "修改密码请求体",
  "properties": {
    "old_password": {
      "type": "string",
      "description": "原密码",
      "example": "old_password123"
    },
    "new_password": {
      "type": "string",
      "description": "新密码",
      "minLength": 6,
      "maxLength": 128,
      "example": "new_password123"
    }
  },
  "required": ["old_password", "new_password"]
}