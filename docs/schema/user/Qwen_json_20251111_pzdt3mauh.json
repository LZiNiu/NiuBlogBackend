{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "UpdateUserInfoRequest",
  "description": "更新用户信息请求体",
  "properties": {
    "nickname": {
      "type": "string",
      "description": "昵称",
      "maxLength": 100,
      "example": "John",
      "nullable": true
    },
    "avatar_url": {
      "type": "string",
      "format": "uri",
      "description": "头像URL",
      "example": "https://example.com/avatar.jpg",
      "nullable": true
    },
    "bio": {
      "type": "string",
      "description": "个人简介",
      "example": "Hello World",
      "nullable": true
    }
  }
}