{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "UserLoginRequest",
  "description": "用户登录请求体",
  "properties": {
    "username": {
      "type": "string",
      "description": "用户名或邮箱",
      "example": "john_doe"
    },
    "password": {
      "type": "string",
      "description": "密码",
      "example": "password123"
    }
  },
  "required": ["username", "password"]
}